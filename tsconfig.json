{
    "compilerOptions": {
        "incremental": true,
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "resolveJsonModule": true,
        "allowJs": true,
        "noEmit": false,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
